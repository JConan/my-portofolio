{
  "name": "my-portofolio-server",
  "version": "0.0.1",
  "private": true,
  "description": "my own project as a showcase",
  "engines": {
    "node": "12.18.x",
    "npm": "6.14.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "yarn run ts-node -r dotenv/config -r tsconfig-paths/register server",
    "build": "cd react-ui/ && yarn install && yarn build",
    "install": "cd react-ui && yarn install",
    "install:check": "yarn install --ignore-platform --check-files && cd react-ui && yarn install --ignore-platform --check-files",
    "start:ui": "cd react-ui/ && yarn start",
    "start:server": "nodemon",
    "start:dev": "concurrently \"yarn start:server\" \"yarn start:ui\"",
    "test:ui": "cd react-ui/ && yarn test",
    "test:server": "NODE_ENV=jest jest --watch",
    "lint": "eslint -c .eslintrc.js --ext .ts <mySrcFolder>"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/lodash": "^4.14.158",
    "@types/mongoose": "^5.7.34",
    "@types/morgan": "^1.9.1",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "helmet": "^3.23.3",
    "http-proxy-middleware": "^1.0.5",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.26",
    "morgan": "^1.10.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "winston": "^3.3.3"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/jest": "24.9.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "babel-jest": "24.9.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.6.0",
    "jest": "24.9.0",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^3.9.7"
  }
}
