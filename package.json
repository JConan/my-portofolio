{
  "name": "my-portofolio-server",
  "version": "0.0.1",
  "private": true,
  "description": "my own project as a showcase",
  "engines": {
    "node": "12.18.x",
    "npm": "6.14.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "INCLUDE_REACT_UI= yarn run ts-node server",
    "build": "cd react-ui/ && yarn install && yarn build",
    "start:ui": "cd react-ui/ && yarn start",
    "start:server": "nodemon",
    "dev": "concurrently \"yarn start:server\" \"yarn start:ui\"",
    "install": "cd react-ui && yarn install",
    "install:check": "yarn install --ignore-platform --check-files && cd react-ui && yarn install --ignore-platform --check-files",
    "test:ui": "cd react-ui/ && yarn test",
    "test:server": "jest --watch"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/morgan": "^1.9.1",
    "express": "^4.16.4",
    "helmet": "^3.23.3",
    "http-proxy-middleware": "^1.0.5",
    "lodash": "^4.17.19",
    "morgan": "^1.10.0",
    "ts-node": "^8.10.2"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/jest": "24.9.0",
    "@types/supertest": "^2.0.10",
    "babel-jest": "24.9.0",
    "concurrently": "^5.2.0",
    "jest": "24.9.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  }
}
