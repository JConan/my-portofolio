{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "server",
    "paths": {
      "@:system": [
        "system"
      ],
      "@:app.config": [
        "app.config"
      ],
      "@:app.routes/*": [
        "routes/*"
      ],
      "@:app.tools": [
        "app.tools"
      ]
    }
  },
  "include": [
    "react-ui/src",
    "server"
  ]
}